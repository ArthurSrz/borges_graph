{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "name": "Borges Library Design System",
  "version": "1.0.0",
  "description": "Basile Minimalism design tokens for the Borges Library interface",

  "colors": {
    "primary": {
      "dark": {
        "value": "#0a0a0a",
        "description": "Primary background color"
      },
      "light": {
        "value": "#f5f5f5",
        "description": "Primary text color"
      },
      "accent": {
        "value": "#d4af37",
        "description": "Interactive elements and highlights"
      },
      "secondary": {
        "value": "#2a2a2a",
        "description": "Panels, cards, secondary backgrounds"
      },
      "muted": {
        "value": "#666666",
        "description": "Disabled states and metadata"
      }
    },
    "extended": {
      "dark-hover": {
        "value": "#1a1a1a",
        "description": "Hover state for dark backgrounds"
      },
      "light-muted": {
        "value": "#a0a0a0",
        "description": "Secondary text"
      },
      "border": {
        "value": "#333333",
        "description": "Subtle borders"
      },
      "focus": {
        "value": "rgba(212, 175, 55, 0.4)",
        "description": "Focus ring color (accent at 40%)"
      }
    }
  },

  "typography": {
    "fontFamily": {
      "primary": {
        "value": "'Inter', system-ui, -apple-system, BlinkMacSystemFont, sans-serif",
        "description": "Primary font stack"
      }
    },
    "fontSize": {
      "display": { "value": "2.5rem", "description": "Page titles (40px)" },
      "h1": { "value": "2rem", "description": "Section headers (32px)" },
      "h2": { "value": "1.5rem", "description": "Panel titles (24px)" },
      "h3": { "value": "1.25rem", "description": "Subsections (20px)" },
      "body": { "value": "1rem", "description": "Main content (16px)" },
      "body-sm": { "value": "0.875rem", "description": "Metadata (14px)" },
      "caption": { "value": "0.75rem", "description": "Tooltips (12px)" }
    },
    "fontWeight": {
      "light": { "value": "300" },
      "regular": { "value": "400" },
      "medium": { "value": "500" },
      "semibold": { "value": "600" },
      "bold": { "value": "700" }
    },
    "lineHeight": {
      "tight": { "value": "1.2" },
      "snug": { "value": "1.3" },
      "normal": { "value": "1.4" },
      "relaxed": { "value": "1.5" },
      "loose": { "value": "1.6" }
    }
  },

  "spacing": {
    "1": { "value": "0.25rem", "description": "4px" },
    "2": { "value": "0.5rem", "description": "8px" },
    "3": { "value": "0.75rem", "description": "12px" },
    "4": { "value": "1rem", "description": "16px" },
    "6": { "value": "1.5rem", "description": "24px" },
    "8": { "value": "2rem", "description": "32px" },
    "12": { "value": "3rem", "description": "48px" },
    "16": { "value": "4rem", "description": "64px" }
  },

  "borderRadius": {
    "sm": { "value": "4px" },
    "md": { "value": "8px" },
    "lg": { "value": "12px" },
    "full": { "value": "9999px" }
  },

  "shadows": {
    "sm": { "value": "0 1px 2px rgba(0,0,0,0.3)" },
    "md": { "value": "0 4px 6px rgba(0,0,0,0.4)" },
    "lg": { "value": "0 10px 15px rgba(0,0,0,0.5)" }
  },

  "transitions": {
    "fast": { "value": "150ms ease" },
    "normal": { "value": "250ms ease" },
    "slow": { "value": "400ms ease" }
  },

  "cssVariables": {
    "description": "CSS custom properties for use in globals.css",
    "output": ":root {\n  --borges-dark: #0a0a0a;\n  --borges-light: #f5f5f5;\n  --borges-accent: #d4af37;\n  --borges-secondary: #2a2a2a;\n  --borges-muted: #666666;\n  --borges-dark-hover: #1a1a1a;\n  --borges-light-muted: #a0a0a0;\n  --borges-border: #333333;\n  --borges-focus: rgba(212, 175, 55, 0.4);\n}"
  },

  "tailwindExtend": {
    "description": "Tailwind config extension",
    "colors": {
      "borges-dark": "#0a0a0a",
      "borges-light": "#f5f5f5",
      "borges-accent": "#d4af37",
      "borges-secondary": "#2a2a2a",
      "borges-muted": "#666666",
      "borges-dark-hover": "#1a1a1a",
      "borges-light-muted": "#a0a0a0",
      "borges-border": "#333333"
    }
  }
}
